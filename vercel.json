{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite",
    "builds": [
      { 
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "root": "." }
      }
    ],
    "routes": [
      {
        "src": "/test",
        "dest": "backend/index.js"
      },
      {
        "src": "/createToken",
        "dest": "backend/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }
